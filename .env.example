# UniPay Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-generate-with-secrets.token_hex(32)
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-with-secrets.token_hex(32)

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/unipay

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5000,http://localhost:5173

# Rate Limiting (Redis URL for production, use memory:// for development)
RATELIMIT_STORAGE_URI=memory://

# Logging
LOG_LEVEL=INFO

# SMTP Email Configuration (Required for Password Reset Emails)
# For Gmail: Use your email and an "App Password" (not your regular password)
# To generate a Gmail App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=UniPay

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5000

# Optional: Sentry for error tracking (production)
# SENTRY_DSN=your-sentry-dsn-here
