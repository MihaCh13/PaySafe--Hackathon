# UniPay Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-generate-with-secrets.token_hex(32)
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-with-secrets.token_hex(32)

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/unipay

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5000,http://localhost:5173

# Rate Limiting (Redis URL for production, use memory:// for development)
RATELIMIT_STORAGE_URI=memory://

# Logging
LOG_LEVEL=INFO

# Optional: Sentry for error tracking (production)
# SENTRY_DSN=your-sentry-dsn-here
