modules = ["nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "jq", "pkg-config", "qhull", "tcl", "tk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev"

[[workflows.workflow]]
name = "dev"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python backend/run.py & npm run dev"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8000

[[ports]]
localPort = 33151
externalPort = 3001

[[ports]]
localPort = 34081
externalPort = 3002

[[ports]]
localPort = 34855
externalPort = 4200

[[ports]]
localPort = 38999
externalPort = 3003

[[ports]]
localPort = 41257
externalPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--worker-class", "gevent", "--workers", "1", "--chdir", "backend", "--bind", "0.0.0.0:5000", "run:app"]
build = ["npm", "run", "build"]
